doctype
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Challenge
    body
        h1 Challenge
        ul 
            - var color = 250
            - for(var i = 1; i <= 10; i++)
                li(style = {
                    'background-color': 'rgb('+color+','+color+',250)',
                    border: '1px solid white',
                    padding: '34px'
                })
                - color -= 25